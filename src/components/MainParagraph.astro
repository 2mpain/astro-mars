---
interface Props {
	title: string;
	subtitle: string;
	description: string;
}

const { title, subtitle, description } = Astro.props;
---

<div
	class="flex overflow-hidden flex-row items-end pt-20 w-full font-light text-white max-md:max-w-full min-h-screen"
>
	<div
		class="z-20 flex flex-col max-md:mt-10 max-md:max-w-full max-md:text-4xl self-start items-start ml-18 px-20"
	>
		<p class="z-20 flex mt-48 text-7xl font-black uppercase">
			{title}
		</p>
		<p class="mt-12 text-5xl w-8/12 leading-snug uppercase">
			{subtitle}
		</p>
		<p class="mt-10 text-2xl text-white max-w-prose">
			{description}
		</p>
		<button
			class="btn mt-20 bg-white text-black hover:bg-black hover:text-white transition-colors rounded-full px-40 py-2 w-1/5 justify-center flex text-4xl shadow-black shadow-md font-normal"
			>Подробнее</button
		>
	</div>

	<img
		loading="lazy"
		src="/Ellipse 2.png"
		class="absolute inset-1 lg:size-auto md:size-auto sm:size-4/5 z-10"
	/>
	<img
		loading="lazy"
		src="/Ellipse 1.png"
		class="absolute inset-1 lg:size-auto md:size-auto sm:size-4/5"
	/>

	<div class="z-30">
		<img
			src="/laptop image.png"
			class="absolute z-10 -right-44 bottom-32 h-full/2 mb-16 mr-32 lg:bottom-32 lg:-right-28"
		/>
		<img
			loading="lazy"
			src="/laptop.png"
			class="absolute z-20 -right-16 bottom-16 h-full/2 lg:bottom-32 lg:right-0"
		/>
	</div>

	<div class="flex z-40 justify-start max-h-full mb-24">
		<img
			loading="lazy"
			src="/iphone empty.png"
			class="absolute self-end z-30 right-0"
		/>
		<img
			loading="lazy"
			src="/iphone empty.png"
			class="absolute self-end z-30 right-0"
		/>
	</div>
</div>

<style>
	.laptop-wrap {
		background-image: url("/Ellipse 1.png");
		background-size: cover;
		background-position: center;
	}
</style>
