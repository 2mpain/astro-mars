---
import Title from "../ui/Title.astro";
import Form from "../ui/Form.astro";

interface Props {
	title?: string;
	subtitle?: string;
	bgImage?: string;
	footerImage?: string;
}

const {
	title = "остались вопросы?",
	subtitle = "Заполните форму обратной свзяи и наш оператор свяжется с вами в течении пары часов",
	bgImage = "/astronaut gradient.png",
	footerImage = "/Moon footer.png",
} = Astro.props;
---

<section class="w-screen min-h-screen bg-black relative py-16">
	<div class="flex justify-center items-center h-1/2">
		<Title title={title} subtitle={subtitle} />
	</div>

	<div class="flex flex-row justify-center m-24">
		<Form />
		<img
			src={bgImage}
			alt="astronaut image"
			class="absolute z-0 top-0 right-0 w-1/2 h-screen opacity-10"
		/>
	</div>

	<img
		src={footerImage}
		alt="moon image"
		class="absolute bottom-0 w-full z-10"
	/>
</section>
