---
import Input from "./Input.astro";
---

<form
	class="flex flex-col justify-center py-12 w-1/3 z-20 bg-slate px-12 gap-y-12 rounded-3xl shadow-md shadow-black"
>
	<Input label="name" labelTextVariant="h3" labelText="Ваше имя" name="name" />

	<Input
		label="phoneNumber"
		labelTextVariant="h3"
		labelText="Номер телефона"
		name="phoneNumber"
	/>

	<button
		type="button"
		class="btn bg-purple-800 rounded-xl p-6 text-white text-center font-regular self-center w-full text-xl mt-12 hover:bg-darkPurple hover:font-bold transition-all duration-500 mb-12"
		>Отправить</button
	>
</form>
